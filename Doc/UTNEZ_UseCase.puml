@startuml

' --- SKIN ---

skinparam actorStyle Hollow
left to right direction

' --- DIAGRAMA ---


rectangle UseCase{

    :Estudiante: as E
    :Admin: as A

    rectangle CORE{
        (simularHorarios) as sh
        E --> sh
        sh ..> (buscar\nMateriasXComision)
        (Listar Materias) as lm
        E --> lm
        lm ..> (simular correlativas)
        E --> (listar inscripciones)
        E --> (registrar inscripcion)
        A --> (ABMC de todo)
    }

    rectangle INFO{
        (Resumen Cursada) as rc
        E --> rc
        rc ..> (promedio aprobado)
        rc ..> (porcentaje aprobado)
        E --> (info Materia)
        E --> (info Carrera)
    }
}

rectangle Backend{
    rectangle b[
        <b> Backend
        --
        - regulares: int[]
        - aprobadas: int[]
        - materias: Materia[]
        - cursables: int[]
        --
        ==Core==
        + dataInicial(): String[]
        + listarMaterias(): String[][]
        + listarInscripcines(): String[]
        + <b>registrarInscripcion(): void
        + <b>simularCorrelativas()
        + <b>simularHorarios()
        ==InfoResumen==
        + infoMateria(): String[]
        + infoCarrera(): String[]
        + resumenCursada(): String[]
        ==Auxiliar==
        + buscarInscripcionesRegAp()
        + buscarMateriasCarrera()
        + filtrarMateriasDisponibles()
        + limpiarRegAp()
        ==UI==
        + getCondiciones()
        + getNotas()
        + <b>getComisiones()
    ]
}




UseCase -[hidden]up-> Backend

@enduml
